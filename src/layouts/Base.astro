---
import "@/styles/colors.css"

export interface Props {
  title: string;
}

const {  title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta charset="utf-8" />
    <meta name="language" content="en" />

    <meta property="title" content="hxsggsz portfolio - know me better!" />
    <meta
      name="description"
      content="This is my portfolio, I'm a fullstack developer open to work, give a try, know me better!"
    />
    <meta name="robots" content="all" />
    <meta name="author" content="hxsggsz" />
    <meta
      name="keywords"
      content="work,fullstack,portfolio,frontend,backend,linkedin"
    />

    <meta property="og:type" content="page" />
    <meta property="og:url" content="https://helper-recruiter.com/" />
    <meta property="og:title" content="hxsggsz portfolio - know me better!" />
    <meta property="og:image" content="" />
    <meta
      property="og:description"
      content="This is my portfolio, I'm a fullstack developer open to work, give a try, know me better!"
    />

    <meta property="article:author" content="hxsggsz" />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@" />
    <meta name="twitter:title" content="hxsggsz portfolio - know me better!" />
    <meta name="twitter:creator" content="@" />
    <meta
      name="twitter:description"
      content="This is my portfolio, I'm a fullstack developer open to work, give a try, know me better!"
    />

    <title>{title}</title>

    <link rel="alternate" type="application/rss+xml" href="/rss.xml" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <slot></slot>
</html>
